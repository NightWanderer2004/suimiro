{% set hints = collections.hints %}

<h1 class="title">{{ pageTitle }}</h1>

<ul class="hintsList">
   {% for hint in hints %}
   <li>
      <a class="hintLink" href="{{ hint.url }}">
         <div class="hintInfo">
            <p class="hintDate">
               {{
                  hint.data.date.toLocaleDateString("en", {
                     year: "numeric",
                     month: "long",
                     day: "numeric"
                  })
               }}
            </p>
         </div>
         <h3 class="hintTitle">{{ hint.data.title }}</h3>
      </a>
   </li>
   {% endfor %}
</ul>
